<H1><%= @user.email %> casts</H1>
<% if current_user && current_user != @user %>

  <% if current_user.is_matched_friend_with? @user %>
    friend 
  <% elsif current_user.sent_friend_request_to? @user %>
    waiting for friend approval
  <% elsif current_user.got_friend_request_from? @user %>
    <%= @user.email %> sent you friend request. will you approve?
    <%= link_to "yes", friendships_path(:user_id => current_user.id, :friend_id => @user.id), :method => :post %>
    <% friendship = @user.friendships.find(:first, :conditions => {:friend_id => current_user.id})%>
    <%= link_to "no", friendship, :method => :delete %>

  <% elsif current_user.is_matched_friend_with? @user %>
    friend 
  <% else %>
    <%= link_to "add as friend", friendships_path(:user_id => current_user.id, :friend_id => @user.id), :method => :post %>
  <% end %>
<% end %>

<%= render_tree(@usercast) %>

<% if can_create_mention_from? @usercast %>
  <p><%= link_to "New Mention", new_mention_path(:usercast_id => @usercast.id) %></p>
<% end %>
